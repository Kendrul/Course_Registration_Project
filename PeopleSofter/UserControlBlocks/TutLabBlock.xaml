            <TextBlock x:Name="tlbDays" TextWrapping="Wrap" Text="MW" FontSize="9" Margin="0,20,280,-20" Height="20"/>
            <TextBlock x:Name="tlbTime" TextWrapping="Wrap" Text="9:00 - 10:00" FontSize="9" Margin="25,20,225,-20" Height="20"/>
            <TextBlock x:Name="tlbRoom" TextWrapping="Wrap" Text="MS119" FontSize="9" Margin="80,20,169,-20" Height="20" FontStyle="Italic"/>
            <RadioButton x:Name="tlbButt" Content="" GroupName="sectionChoice" Margin="131,10,153,-10"/>
        </Grid>
    </Grid>
</UserControl>
