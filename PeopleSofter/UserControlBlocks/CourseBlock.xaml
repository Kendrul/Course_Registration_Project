<UserControl x:Name="CourseBlock1" x:Class="PeopleSofter.CourseBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="157" d:DesignWidth="133.4" Margin="10,15,0,0">
    <Grid>
        <Button x:Name="courseButt" HorizontalAlignment="Left" VerticalAlignment="Top" Width="133.4" Height="157" FontSize="18" FontWeight="Bold" Padding="1,10" Click="cbClick">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFD4D4"/>
                    <GradientStop Color="#FFD02E2E" Offset="0.999"/>
                </LinearGradientBrush>
            </Button.Background>
            <StackPanel Height="147" Width="133">
                <TextBlock x:Name="cbCourseName" TextWrapping="Wrap" Text="CPSC 481" Height="36" Margin="0,0,-0.4,0" FontSize="16" TextAlignment="Center"/>
                <TextBlock x:Name="cbNameLong" TextWrapping="Wrap" Text="Human-Computer Interaction I" FontSize="12" TextAlignment="Center" Padding="1,0,1,20" FontWeight="Normal" Margin="0,0,9.8,0" Height="108"/>
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
